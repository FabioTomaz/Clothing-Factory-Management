<Window x:Class="Trabalho_BD_IHC.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Trabalho_BD_IHC"
        mc:Ignorable="d"
        Title="Gestão de Produção, Stock e Venda" Height="400" MinHeight="300" Width="700" MinWidth="685">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TabControl x:Name="tabControl" Grid.Column="0" HorizontalAlignment="Stretch" Grid.Row="0" VerticalAlignment="Stretch">
            <TabItem Header="Minha Conta" IsEnabled="True">
                <Grid Background="White">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.1*"/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="0.1*"/>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="0.1*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="0.1*"/>
                        <RowDefinition Height="1.3*"/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition Height="0.1*"/>
                    </Grid.RowDefinitions>
                    <GroupBox Header="Informações de Login" Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="1" Grid.RowSpan="1">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition></RowDefinition>
                                <RowDefinition></RowDefinition>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition></ColumnDefinition>
                                <ColumnDefinition></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Label Content="Nº de Funcionário" Grid.Row="0" Grid.Column="0"></Label>
                            <Label Content="PassWord" Grid.Row="1" Grid.Column="0"></Label>
                        </Grid>
                    </GroupBox>
                    <GroupBox Header="Informações Pessoais" Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="2" Grid.RowSpan="4">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition></ColumnDefinition>
                                <ColumnDefinition></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition></RowDefinition>
                                <RowDefinition></RowDefinition>
                                <RowDefinition></RowDefinition>
                                <RowDefinition></RowDefinition>
                                <RowDefinition></RowDefinition>
                                <RowDefinition></RowDefinition>
                            </Grid.RowDefinitions>
                            <Label Content="Nome: " Grid.Row="0"></Label>
                            <Label Content="E-Mail: " Grid.Row="1"></Label>
                            <Label Content="Telefone: " Grid.Row="2"></Label>
                            <Label Content="Salário: " Grid.Row="3"></Label>
                            <Label Content="Hora de Entrada: " Grid.Row="4"></Label>
                            <Label Content="Hora de Saída: " Grid.Row="5"></Label>
                        </Grid>
                    </GroupBox>
                    <GroupBox Header="Imagem de Perfil" Grid.Row="1" Grid.RowSpan="3" Grid.Column="4">
                        <Image Source="login.png"></Image>
                    </GroupBox>
                    <Button Content="Alterar Foto" Grid.Column="4" Grid.Row="4" VerticalAlignment="Center"/>
                    <Button Content="Alterar Informações Pessoais" Grid.Column="4" Grid.Row="5" VerticalAlignment="Top"/>
                    <Button Content="Alterar PassWord" Grid.Column="4" Grid.Row="5" VerticalAlignment="Bottom"/>
                </Grid>
            </TabItem>
            <TabItem Header="Clientes"  IsEnabled="True">
                <Grid Background="White">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="24*"/>
                        <ColumnDefinition Width="142*"/>
                        <ColumnDefinition Width="16*"/>
                        <ColumnDefinition Width="473*"/>
                        <ColumnDefinition Width="23*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="0.05*"/>
                        <RowDefinition />
                        <RowDefinition Height="0.1*"/>
                    </Grid.RowDefinitions>
                    <GroupBox Header="Operações" Grid.Column="1" Grid.Row="1">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="0.1*"></ColumnDefinition>
                                <ColumnDefinition></ColumnDefinition>
                                <ColumnDefinition Width="0.1*"></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="0.3*"></RowDefinition>
                                <RowDefinition></RowDefinition>
                                <RowDefinition Height="0.3*"></RowDefinition>
                                <RowDefinition></RowDefinition>
                                <RowDefinition Height="0.3*"></RowDefinition>
                                <RowDefinition></RowDefinition>
                                <RowDefinition Height="0.3*"></RowDefinition>
                            </Grid.RowDefinitions>
                            <Button x:Name="registarCliente" Content="Registar Cliente" Click="registarCliente_Click" Grid.Row="1" Grid.Column="1"/>
                            <Button x:Name="editarCliente" Content="Editar Cliente" Grid.Row="3" Grid.Column="1"/>
                            <Button x:Name="removerCliente" Content="Remover Cliente" Grid.Row="5" Grid.Column="1"/>
                        </Grid>
                    </GroupBox>
                    <Grid Grid.Column="3" Grid.Row="1">
                        <Frame Name="clientesFrame" ContentRendered="myFrame_ContentRendered"></Frame>
                    </Grid>
                </Grid>
            </TabItem>
            <TabItem Header="Encomendas"  IsEnabled="True">
                <Grid Background="WhiteSmoke">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.05*"/>
                        <ColumnDefinition Width="0.3*"/>
                        <ColumnDefinition Width="0.05*"/>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="0.05*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Label x:Name="operacoesLabel3" Content="Operações" Grid.Column="1" VerticalAlignment="Center"/>
                    <Label x:Name="encomendasLabel" Content="Lista de Encomendas da Empresa" Grid.Column="3" Grid.Row="0" VerticalAlignment="Center"/>
                    <Button x:Name="registarEncomenda" Content="Registar Nova Encomenda" Grid.Column="1" Grid.Row="1" Margin="0,2,0,36" Grid.RowSpan="2"/>
                    <Button x:Name="editarEncomenda" Content="Editar Encomenda" Grid.Column="1" Grid.Row="3"/>
                    <Button x:Name="entregarEncomenda" Content="Entregar Encomenda" Grid.Column="1" Grid.Row="5"/>
                    <Button x:Name="entregarEncomenda_Copy" Content="Lista de Fornecedores" Grid.Column="1" Grid.Row="7"/>
                </Grid>
            </TabItem>
            <TabItem Header="Produtos"  IsEnabled="True">
                <Grid Background="WhiteSmoke">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="24*"/>
                        <ColumnDefinition Width="142*"/>
                        <ColumnDefinition Width="10*"/>
                        <ColumnDefinition Width="14*"/>
                        <ColumnDefinition Width="135*"/>
                        <ColumnDefinition Width="338*"/>
                        <ColumnDefinition Width="23*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Label x:Name="operacoesLabel2" Content="Operações" Grid.Column="1" VerticalAlignment="Center" Margin="0,12,0,11"/>
                    <Label x:Name="ProdutosLabel" Content="Lista de Produtos da Empresa" Grid.Column="4" Grid.Row="0" VerticalAlignment="Center" Margin="0,12,0,11" Grid.ColumnSpan="2"/>
                    <ListBox x:Name="produtosListBox" Grid.Column="4" Grid.Row="1" Grid.RowSpan="5" Margin="0,25,0,0" Grid.ColumnSpan="2"/>
                    <Button x:Name="produzirProdutos" Content="Produzir Produtos" Grid.Column="1" Grid.Row="2"/>
                    <Button x:Name="registarDesenho" Content="Registar Desenho" Grid.Column="1" Grid.Row="4" Margin="0,0,0,1"/>
                </Grid>
            </TabItem>
            <TabItem Header="Materiais"  IsEnabled="True">
                <Grid Background="WhiteSmoke">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.05*"/>
                        <ColumnDefinition Width="0.3*"/>
                        <ColumnDefinition Width="0.05*"/>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="0.05*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Label x:Name="operacoesLabel1" Content="Operações" Grid.Column="1" VerticalAlignment="Center"/>
                    <Label x:Name="materiaisTexteisLabel" Content="Lista de Materiais em Armazem" Grid.Column="3" Grid.Row="0" VerticalAlignment="Center"/>
                    <ListBox x:Name="materiaisTexteisListBox" Grid.Column="3" Grid.Row="1" Grid.RowSpan="5" Margin="0,24,0,0"/>
                    <Button x:Name="adicionarMateriaisTexteis" Content="Encomendar Materiais" Grid.Column="1" Grid.Row="2"/>
                    <Button x:Name="removerMateriaisTexteis" Content="Remover Materiais" Grid.Column="1" Grid.Row="4" Margin="0,1,0,0"/>
                </Grid>
            </TabItem>
            <TabItem Header="Recursos Humanos" >
                <Grid Background="WhiteSmoke">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.05*"></ColumnDefinition>
                        <ColumnDefinition Width="0.3*"></ColumnDefinition>
                        <ColumnDefinition Width="0.05*"></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition Width="0.05*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>
                    <Label x:Name="operacoesLabel" Content="Operações" Grid.Column="1" VerticalAlignment="Center"/>
                    <Label x:Name="empregadosLabel" Content="Lista de Empregados da Filial" Grid.Column="3" Grid.Row="0" VerticalAlignment="Center"/>
                    <ListBox x:Name="empregadosListBox" Grid.Row="1" Grid.RowSpan="7" Grid.Column="3" Margin="0,23,0,0"/>
                    <Button x:Name="adicionarEmpregado" Content="Adicionar Empregado" Grid.Column="1" Grid.Row="2"/>
                    <Button x:Name="removerEmpregado" Content="Remover Empregado" Grid.Column="1" Grid.Row="4"/>
                    <Button x:Name="editarEmpregado" Content="Editar Empregado" Grid.Column="1" Grid.Row="6"/>
                </Grid>
            </TabItem>
            <TabItem Header="Estatísticas"  IsEnabled="True">
                <Grid Background="White">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.1*"/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="0.1*"/>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="0.1*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="0.1*"/>
                        <RowDefinition Height="1.3*"/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition Height="0.1*"/>
                    </Grid.RowDefinitions>
                    <GroupBox Header="Informações de Fábrica Filial" Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="1" Grid.RowSpan="2">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition></RowDefinition>
                                <RowDefinition></RowDefinition>
                                <RowDefinition></RowDefinition>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition></ColumnDefinition>
                                <ColumnDefinition></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Label Content="Nº de filial: " Grid.Row="0" Grid.Column="0"></Label>
                            <Label Content="Telefone: " Grid.Row="1" Grid.Column="0"></Label>
                            <Label Content="Fax: " Grid.Row="0" Grid.Column="1"></Label>
                            <Label Content="E-mail: " Grid.Row="1" Grid.Column="1"></Label>
                            <Label Content="Morada: " Grid.Row="2" Grid.Column="0"></Label>
                        </Grid>
                    </GroupBox>
                    <GroupBox Header="Estatística da Fábrica" Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="3" Grid.RowSpan="3">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition></ColumnDefinition>
                                <ColumnDefinition></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition></RowDefinition>
                                <RowDefinition></RowDefinition>
                                <RowDefinition></RowDefinition>
                            </Grid.RowDefinitions>
                            <Label Content="Lucros Mensais: " Grid.Row="0"></Label>
                            <Label Content="Receitas Mensais: " Grid.Row="1"></Label>
                            <Label Content="Gastos Mensais: " Grid.Row="0" Grid.Column="1"></Label>
                            <Label Content="Gastos mão-de-obra: " Grid.Row="1" Grid.Column="1"></Label>

                        </Grid>
                    </GroupBox>
                    <GroupBox Header="Imagem de Perfil" Grid.Row="1" Grid.RowSpan="3" Grid.Column="4">
                        <Image Source="login.png"></Image>
                    </GroupBox>
                    <Button Content="Alterar Foto" Grid.Column="4" Grid.Row="4" VerticalAlignment="Center"/>
                    <Button Content="Alterar Informações Pessoais" Grid.Column="4" Grid.Row="5" VerticalAlignment="Top"/>
                    <Button Content="Alterar PassWord" Grid.Column="4" Grid.Row="5" VerticalAlignment="Bottom"/>
                </Grid>
            </TabItem>
            <TabItem Header="Definições"  IsEnabled="False">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="Ajuda" >
                <Grid Background="White"/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
